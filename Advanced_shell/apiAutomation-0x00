#!/bin/bash

# Set output and error files
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make API request
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"

curl --silent --show-error "$API_URL" -o "$OUTPUT_FILE"
if [ $? -eq 0 ]; then
  echo "Successfully retrieved data for Pikachu and saved to data.json"
  exit 0
else
  echo "[$(date)]: Failed to retrieve data for Pikachu. Check your network connection or the API URL." >> "$ERROR_FILE"
  exit 1
fi