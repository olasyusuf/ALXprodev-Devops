#!/bin/bash

# Check if the JSON file exists
if [ ! -f data.json ]; then
  echo "data.json not found. Please run the API fetch script first."
  exit 1
fi

# Extract and format fields from data.json using jq, awk, sed
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')
formatted_weight=$(jq -r '.weight' data.json | awk '{printf "%g", $1 / 10}')
formatted_height=$(jq -r '.height' data.json | awk '{printf "%.1f", $1 / 10}')

# Match the exact output required
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."